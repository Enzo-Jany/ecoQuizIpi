<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="425.0dp"
        android:id="@+id/imageView1" />
    <TextView
        android:text="Découvre ta planète et les enjeux pour la sauver"
        android:layout_width="615.5dp"
        android:id="@+id/textView1"
        android:layout_marginBottom="118.5dp"
        android:gravity="center"
        android:textSize="100px"
        android:paddingLeft="150px"
        android:layout_height="205.0dp" />
    <Button
        android:text="Demarrer"
        android:layout_width="300dp"
        android:layout_height="77.0dp"
       android:gravity="center"

        android:id="@+id/btnStart"

        android:layout_marginLeft="240dp"
        android:backgroundTint="#ff5672c0" />

</LinearLayout>
