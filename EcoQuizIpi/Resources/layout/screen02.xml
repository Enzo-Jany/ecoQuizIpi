<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="252.2dp"
        android:id="@+id/imageView1"
        android:layout_marginBottom="0.0dp" />
    <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPseudo"
        android:layout_marginLeft="85.0dp"
        android:layout_marginRight="85.0dp"
        android:layout_marginTop="23.0dp" />
    <Button
        android:text="Play"
        android:layout_width="match_parent"
        android:layout_height="57.1dp"
        android:id="@+id/buttonStart"
        android:layout_marginLeft="50.0dp"
        android:layout_marginRight="50.0dp"
        android:layout_marginTop="140.0dp"
        android:background="@android:color/holo_blue_dark" />
</LinearLayout>