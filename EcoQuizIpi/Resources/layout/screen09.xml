<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <TextView
        android:text="Continuez Ã  jouer et progressez dans les niveaux !"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitre"
        android:textAlignment="center"
        android:paddingBottom="50px"
        android:paddingLeft="50px"
        android:paddingRight="50px" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutNiv1"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingBottom="30px">
        <ImageView
            android:src="@drawable/lock"
            android:layout_width="58.0dp"
            android:layout_height="50dp"
            android:id="@+id/imgCad1"
            android:layout_marginBottom="0.0dp"
            android:layout_marginRight="0.0dp"/>
        <Button
            android:text="Niveau 1 : 40 pts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnNiv1"
            android:backgroundTint="#ffc8e6c9"
            android:textStyle="normal|bold" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutNiv2"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingBottom="30px">
        <ImageView
             android:src="@drawable/lock"
            android:layout_width="58.0dp"
            android:layout_height="50dp"
            android:id="@+id/imgCad2" />
        <Button
            android:text="Niveau 2 : 100 pts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnNiv2"
            android:backgroundTint="#ffa5d6a7"
            android:textStyle="normal|bold" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutNiv3"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingBottom="30px">
        <ImageView
            android:src="@drawable/lock"
            android:layout_width="58.0dp"
            android:layout_height="50dp"
            android:id="@+id/imgCad3" />
        <Button
            android:text="Niveau 3 : 250 pts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnNiv3"
            android:backgroundTint="#ff81c784"
            android:textStyle="normal|bold" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutNiv4"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingBottom="30px">
        <ImageView
            android:src="@drawable/lock"
            android:layout_width="58.0dp"
            android:layout_height="50dp"
            android:id="@+id/imgCad4" />
        <Button
            android:text="Niveau 4 : 500 pts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnNiv4"
            android:backgroundTint="#ff4caf50"
            android:textStyle="bold|normal" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutNiv5"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingBottom="30px">
        <ImageView
            android:src="@drawable/lock"
            android:layout_width="58.0dp"
            android:layout_height="50dp"
            android:id="@+id/imgCad5" />
        <Button
            android:text="Niveau 5 : 1000 pts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnNiv5"
            android:backgroundTint="#ff388e3c"
            android:textStyle="bold|normal" />
    </LinearLayout>
</LinearLayout>