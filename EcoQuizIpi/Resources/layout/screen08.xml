<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/abc_action_button_min_width_overflow_material"
                android:layout_marginBottom="@dimen/abc_action_button_min_width_overflow_material">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Choisissez votre thème"
                    android:textSize="22sp" />
             </LinearLayout>

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/abc_action_button_min_width_overflow_material">

			    <ImageView
                    android:layout_gravity="center_vertical"
				    android:src="@android:drawable/ic_menu_gallery"
				    android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
				    android:layout_height="@dimen/abc_action_bar_stacked_max_height"
				    android:id="@+id/ivCoccinelle"
				    android:layout_marginBottom="0.0dp" />


				<TextView
					android:text="Environnement"
					android:textSize="14dp"
                    android:textColor="#1E2020"
					android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
					android:layout_height="match_parent"
					android:id="@+id/tvEnvironnement"
					android:gravity="center"
					android:background="@drawable/environnementbackground"
					android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/abc_action_button_min_width_overflow_material">

			    <ImageView
                    android:layout_gravity="center_vertical"
				    android:src="@android:drawable/ic_menu_gallery"
				    android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
				    android:layout_height="@dimen/abc_action_bar_stacked_max_height"
				    android:id="@+id/ivAir"
				    android:layout_marginBottom="0.0dp" />


                <TextView
					android:text="Air"
					android:textSize="14dp"
					android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
					android:layout_height="match_parent"
					android:id="@+id/tvAir"
                    android:textColor="#1E2020"
					android:gravity="center"
					android:background="@drawable/airbackground"
					android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/abc_action_button_min_width_overflow_material">

			    <ImageView
				    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_gravity="center_vertical"
				    android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
				    android:layout_height="@dimen/abc_action_bar_stacked_max_height"
				    android:id="@+id/ivEau"
				    android:layout_marginBottom="0.0dp" />

                <TextView
					android:text="Eau"
					android:textSize="14dp"
                    android:textColor="#1E2020"
					android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
					android:layout_height="match_parent"
					android:id="@+id/tvEau"
					android:gravity="center"
					android:background="@drawable/eaubackground"
					android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/abc_action_button_min_width_overflow_material">

			    <ImageView
                    android:layout_gravity="center_vertical"
				    android:src="@android:drawable/ic_menu_gallery"
				    android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
				    android:layout_height="@dimen/abc_action_bar_stacked_max_height"
				    android:id="@+id/ivEnvironnement"
				    android:layout_marginBottom="0.0dp" />

                <TextView
					android:text="Déchet"
                    android:textColor="#1E2020"
					android:textSize="14dp"
					android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
					android:layout_height="match_parent"
					android:id="@+id/tvDéchet"
					android:gravity="center"
					android:background="@drawable/dechetbackground"
					android:textStyle="bold"
                    />

            </LinearLayout>

            </LinearLayout>

             <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:background="#18D2E8"
                android:layout_alignParentBottom="true"
                app:menu="@menu/navigation" />

      
    </LinearLayout>

</RelativeLayout>
